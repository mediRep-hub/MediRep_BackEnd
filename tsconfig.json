{
  "compilerOptions": {
    "target": "ES6", // ✅ Modern JS
    "module": "commonjs", // ✅ Needed for Node.js
    "strict": true, // ✅ Enables all strict type-checking
    "esModuleInterop": true, // ✅ Allows default imports from CommonJS
    "skipLibCheck": true, // ✅ Speeds up build, ignores type issues in libs
    "forceConsistentCasingInFileNames": true, // ✅ Avoids case issues (important in production)
    "outDir": "./dist", // ✅ Build output
    "rootDir": "./src", // ✅ Source files
    "resolveJsonModule": true, // ✅ Allows importing .json files
    "types": ["node"] // ✅ Includes Node.js typings
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
